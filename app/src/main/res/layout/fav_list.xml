<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:minHeight="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="72dp"
        android:background="?android:attr/selectableItemBackground">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="profile"
            android:id="@+id/fav_person_photo"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/textview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            tools:layout_alignWithParentIfMissing="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_toRightOf="@+id/fav_person_photo">

            <TextView
                android:id="@+id/fav_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="friend name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fav_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last message"
                android:textSize="14sp"
                android:textColor="@color/textmessage"/>
        </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_popup"
        android:src="@drawable/ic_popup_menu_fav"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_centerVertical="true" />

    </RelativeLayout>



